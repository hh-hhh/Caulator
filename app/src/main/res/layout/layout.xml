<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   >

    <EditText
        android:id="@+id/Econtent"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="#f5e1e1"
        android:cursorVisible="false"
        android:gravity="right">
    </EditText>


    <RadioGroup
        android:layout_gravity="center_horizontal"
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:orientation="horizontal" >
        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:text="二进制" />
        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="80dp"
            android:layout_height="fill_parent"

            android:text="八进制" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:checked="true"
            android:text="十进制" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:text="十六进制" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <Button
            android:id="@+id/clean"
            android:layout_width="106sp"
            android:layout_height="wrap_content"
            android:text="清空数据" />

        <Button
            android:id="@+id/backspace"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="←" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/b7"
            android:layout_width="72sp"
            android:layout_height="wrap_content"
            android:text="7" />

        <Button
            android:id="@+id/b8"
            android:layout_width="72sp"
            android:layout_height="wrap_content"
            android:text="8" />

        <Button
            android:id="@+id/b9"
            android:layout_width="72sp"
            android:layout_height="wrap_content"
            android:text="9" />

        <Button
            android:id="@+id/b10"
            android:layout_width="72sp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="A" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/b4"
            android:layout_width="72sp"
            android:layout_height="wrap_content"
            android:text="4" />

        <Button
            android:id="@+id/b5"
            android:layout_width="72sp"
            android:layout_height="wrap_content"
            android:text="5" />

        <Button
            android:id="@+id/b6"
            android:layout_width="72sp"
            android:layout_height="wrap_content"
            android:text="6" />

        <Button
            android:id="@+id/b11"
            android:layout_width="72sp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="B" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/b1"
            android:layout_width="72sp"
            android:layout_height="wrap_content"
            android:text="1" />

        <Button
            android:id="@+id/b2"
            android:layout_width="72sp"
            android:layout_height="wrap_content"
            android:text="2" />

        <Button
            android:id="@+id/b3"
            android:layout_width="72sp"
            android:layout_height="wrap_content"
            android:text="3" />

        <Button
            android:id="@+id/b12"
            android:layout_width="72sp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="C" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/b0"
            android:layout_width="72sp"
            android:layout_height="wrap_content"
            android:text="0" />

        <Button
            android:id="@+id/b15"
            android:layout_width="72sp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="F" />

        <Button
            android:id="@+id/b14"
            android:layout_width="72sp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="E" />

        <Button
            android:id="@+id/b13"
            android:layout_width="72sp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="D" />


    </LinearLayout>

</LinearLayout>